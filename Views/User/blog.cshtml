                        <h4>Address: @v.address</h4>
                        <h4>Capacity: @v.capacity</h4>
                        @Html.ActionLink("more", "abcout", new { rid = @v.rid, pic=i }, new { @class = "more float_r" })
                
                        <div class="cleaner"></div>
                    </div>
                }
            }
        }
    }

