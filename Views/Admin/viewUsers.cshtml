@model List<EADWebProj.Models.User>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Display - Gallery</title>
<meta name="keywords" content="" />
<meta name="description" content="" />
<!-- Free Website Template by www.tooplate.com -->
<link href="~/Content/tooplate_style.css" rel="stylesheet" type="text/css" />

<script language="javascript" type="text/javascript">
function clearText(field)
{
    if (field.defaultValue == field.value) field.value = '';
    else if (field.value == '') field.value = field.defaultValue;
}
</script>

<link rel="stylesheet" type="text/css" href="~/Content/jquery.lightbox-0.5.css" />    
    
<!-- Arquivos utilizados pelo jQuery lightBox plugin -->
<script type="text/javascript" src="scripts/jquery.js"></script>
<script type="text/javascript" src="scripts/jquery.lightbox-0.5.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/jquery.lightbox-0.5.css" media="screen" />
<!-- / fim dos arquivos utilizados pelo jQuery lightBox plugin -->

<!-- Ativando o jQuery lightBox plugin -->
<script type="text/javascript">
$(function() {
    $('#gallery a').lightBox();
});
</script>

</head>
<body id="sub">

<div id="tooplate_wrapper_sub">
	<div id="tooplate_header">
    	<div id="site_title"><h1><a href="/Home/index">Hotel Hub</a></h1></div>
        <div id="tooplate_menu">
            <ul>
                <li><a href="/Home/index" class="current">Home</a></li>
               @{
                   if (Session["id"] != null)
                   {
                    <li style="width:150px;"><a href="/Admin/resturants" style="width:120px;">View Resturants</a></li>

                    <li><a href="/Admin/editProfile">Edit Profile</a></li>
                    <li><a href="/Admin/signup">Add Admin</a></li>
                    <li><a href="/Admin/logout">logout</a></li>
                   }
                   else
                   {
                    <li><a href="/admin/usersignin">Sign In</a></li>
                   }
            }
            </ul>    	
            <div id="search_box">
                <form action="/User/Blog" method="post">
                    <input type="text" value="Search" name="city" size="10" id="searchfield" title="searchfield" onfocus="clearText(this)" onblur="clearText(this)" />

                    <input type="submit" name="Search" value="" id="searchbutton" title="Search" />
                </form>
            </div>
        </div> <!-- end of tooplate_menu -->
    </div> <!-- end of header -->
    
    <div id="tooplate_middle_sub">
        <div id="mid_title">
            Users
        </div>
    </div> <!-- end of middle -->
    


     <div id="tooplate_main">
        
        <div id="gallery">
            
            <ul >
                @{
                    int i=0;
                    foreach(EADWebProj.Models.User u in Model)
                    { 
                            <li style="float:none">
                                <h3>@(++i): @u.name </h3> 
                                
                                <p> @Html.ActionLink("Delete", "DeleteUser", new { id = u.uid }, new { @class = "more float_r" }) 
                                @Html.ActionLink("Edit", "EditUser", new { i = u.uid }, new { @class = "more float_r" })
                                </p>
                                <br />
                            </li>
                            
                    }
}
            
         	</ul>
            
            <div class="cleaner"></div>
       </div>
        
  </div> <!-- end of tooplate_main -->
</div> <!-- end of wrapper -->




<div id="tooplate_footer_wrapper">
    <div id="tooplate_footer">
    
    	<div class="col_allw300">
        	<h4>Our Pages</h4>
            <ul class="footer_list">
                
            </ul>
        </div>
    	
    	<div class="col_allw300 col_last">
        
        	<h4>About Us</h4>
            <div class="cleaner h10"></div>
            
            Copyright © 2048
            
        </div>                 
    
        <div class="cleaner"></div>
    
    </div> <!-- end of tooplate_footer -->
     <div class="cleaner"></div>
</div>

</body>
</html>