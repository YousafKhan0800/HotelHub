<script>

    $(document).ready(function () {
        $('#confirmPassword').keyup(function ()
        {
            console.log("asdfljk");
            $("#confirmPassword").css("color", "black");
            $('#err').text("password matched");
            var pass = $('#confirmPassword').val();
            var pass1 = $('#password').val();
            if (pass != pass1) {
                $("#confirmPassword").css("color", "red");
                $('#err').text("password don`t match");
                $('#submit').attr("disabled","disabled");
            }
            else {
                $("#confirmPassword").css("color", "green");
                $('#err').text("password matched");
                $('#submit').removeAttr("disabled");
            }
        });
     

        $('#id').keyup(
            function () {
                console.log("yousaf");
                $("#id").css("color", "black");
                $('#result').text("");
                var userName = $('#id').val();
                
                $.getJSON("/admin/CheckUserName?UserName=" + userName,function(data) {
                    if (data) {
                        $("#id").css("color", "green");
                            $('#result').text("User name available");

                        }
                    else {
                        $("#id").css("color", "red");
                            $('#result').text("User already exists in database");
                            }
                    }
                    );

            }
        );

    });//ready function
    </script>



</head>




<body id="sub">

