@model EADWebProj.Models.resturant
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Display - Blog</title>
<meta name="keywords" content="" />
<meta name="description" content="" />
<!-- Free Website Template by www.tooplate.com -->
    <link href="~/Content/tooplate_style.css" rel="stylesheet" type="text/css" />

<script language="javascript" type="text/javascript">
function clearText(field)
{
    if (field.defaultValue == field.value) field.value = '';
    else if (field.value == '') field.value = field.defaultValue;
}
</script>

</head>
<body id="sub">

<div id="tooplate_wrapper_sub">
	<div id="tooplate_header">
    	<div id="site_title"><h1><a href="/Home/index">User Profile</a></h1></div>
        <div id="tooplate_menu">
            <ul>
                <li><a href="/Home/index" class="current">Home</a></li>
                
                @{
                    if (Session["rid"] != null)
                    {

                        <li><a href="/Resturant/gallery">Gallery</a></li>
                        
                        <li><a href="/Resturant/editProfile">Edit Profile</a></li>
                        <li><a href="/Resturant/logout">logout</a></li>
                    }
                    else
                    {
                        <li><a href="/Resturant/usersignin">Sign In</a></li>
                        <li><a href="/Resturant/signup">Sign Up</a></li>
                    }
                }
            </ul>    	
            <div id="search_box">
                <form action="/User/Blog" method="post">
                    <input type="text" value="Search" name="city" size="10" id="searchfield" title="searchfield" onfocus="clearText(this)" onblur="clearText(this)" />

                    <input type="submit" name="Search" value="" id="searchbutton" title="Search" />
                </form>
            </div>
        </div> <!-- end of tooplate_menu -->

    </div> <!-- end of header -->
    
    <div id="tooplate_middle_sub">
        <div id="mid_title">
           Blog Posts
        </div>
        </div> <!-- end of middle -->
    
     <div id="tooplate_main">
        <div class="post_box">
            <h2><strong>Name:</strong>@Model.name</h2>
            <div class="image_frame"><span></span><img src="~/Images/tooplate_image_022.jpg" alt="Image 08" /></div>
            <h4><strong>ID:     </strong>@Model.rid</h4>
            <h4><strong>Phone:</strong>@Model.phone</h4>
            <h4><strong>Address:</strong>@Model.address</h4>
            <h4><strong>Capacity:</strong>@Model.capacity</h4>

            <div class="cleaner"></div>
        </div>
        
    </div> <!-- end of tooplate_main -->
</div> <!-- end of wrapper -->

<div id="tooplate_footer_wrapper">
    <div id="tooplate_footer">
    
    	<div class="col_allw300">
        	<h4>Our Pages</h4>
            <ul class="footer_list">

                <li><a href="/Home/index" class="current">Home</a></li>
                @{
                    if (Session["rid"] != null)
                    {
                        <li><a href="/User/blog">View Profile</a></li>
                        <li><a href="/User/editProfile">Edit Profile</a></li>
                    }
                    else
                    {
                        <li><a href="/User/signup">Sign Up</a></li>
                        <li><a href="/User/usersignin">Sign In</a></li>
                    }
                }
            </ul>
        </div>
    	
    	<div class="col_allw300 col_last">
        
        	<h4>About Us</h4>
            <div class="cleaner h10"></div>
            
            Copyright © 2048 
            
        </div>                 
    
        <div class="cleaner"></div>
    
    </div> <!-- end of tooplate_footer -->
     <div class="cleaner"></div>
</div>

</body>
</html>
